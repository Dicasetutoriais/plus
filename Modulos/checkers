    curl -s -o install.sh -L https://raw.githubusercontent.com/PhoenixxZ2023/proxy/main/install.sh
    chmod +x install.sh
    ./install.sh && mainproxy
    echo ""
    echo "VELOCIDADE SUPREMA ATIVADA"
    }
    ;;
6 | 06)
    bash <(curl -sL https://raw.githubusercontent.com/PhoenixxZ2023/conecta/main/instcheck.sh) && chuser
    ;;
7 | 7)
    if check_installed; then
        chany  # Já instalado, executar o sistema chany
    else
        bash <(curl -sL https://raw.githubusercontent.com/PhoenixxZ2023/checkany/main/install.sh) && chany
    fi
    ;;
0 | 00)
    clear
    menu
    ;;
*)
    echo -e "\033[1;31mOpcao invalida!\033[0m"
    ;;
esac
sleep 2
