tput cnorm
clear
case $x in
1 | 01)
    initcheck
    ;;
2 | 02)
    wget https://raw.githubusercontent.com/PhoenixxZ2023/ws-epro/main/Netcolvip.bin -O install-ws && chmod +x install-ws && ./install-ws && MENU
    ;;
3 | 03)
    bash <(curl -sL https://raw.githubusercontent.com/PhoenixxZ2023/DTCheckUser/master/install.sh)
